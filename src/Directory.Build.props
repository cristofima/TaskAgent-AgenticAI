<Project>
  <!-- Common properties for all projects -->
  <PropertyGroup>
    <!-- Target Framework -->
    <TargetFramework>net10.0</TargetFramework>
    <LangVersion>latest</LangVersion>

    <!-- .NET Aspire Version -->
    <AspireVersion>13.0.0</AspireVersion>

    <!-- General Settings -->
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Code Analysis -->
    <AnalysisLevel>latest</AnalysisLevel>
    <AnalysisMode>All</AnalysisMode>
    <CodeAnalysisTreatWarningsAsErrors>true</CodeAnalysisTreatWarningsAsErrors>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>

    <!-- Assembly Information -->
    <Company>TaskAgent</Company>
    <Product>TaskAgent - AI-Powered Task Management</Product>
    <Copyright>Copyright Â© 2025 TaskAgent</Copyright>
    <Authors>TaskAgent Development Team</Authors>

    <!-- Versioning -->
    <!-- Application version (update before creating Git tags/releases) -->
    <!-- MSBuild automatically derives FileVersion and AssemblyVersion from this -->
    <Version>2.0.0</Version>

    <!-- Build Configuration -->
    <Deterministic>true</Deterministic>
    <ContinuousIntegrationBuild Condition="'$(CI)' == 'true'">true</ContinuousIntegrationBuild>

    <!-- NuGet Package Settings -->
    <PackageProjectUrl>https://github.com/cristofima/TaskAgent-AgenticAI</PackageProjectUrl>
    <RepositoryUrl>https://github.com/cristofima/TaskAgent-AgenticAI</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <!-- Code Analysis Packages -->
  <ItemGroup>
    <PackageReference Include="SonarAnalyzer.CSharp" />
  </ItemGroup>
</Project>
