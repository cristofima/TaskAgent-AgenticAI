@{
    ViewData["Title"] = "Task Manager";
}

<div class="chat-container">
    <div class="row h-100">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <div class="card shadow-lg h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <span class="me-2">ðŸ“‹</span>Task Management Assistant
                    </h5>
                    <small>Your AI-powered task organizer</small>
                </div>
                
                <div class="card-body d-flex flex-column" style="height: calc(100vh - 250px);">
                    <div id="chatMessages" class="flex-grow-1 overflow-auto mb-3">
                        <div class="message bot-message">
                            <div class="message-content">
                                <strong>Task Assistant:</strong>
                                <p class="mb-0">Hi! I'm your task management assistant. I can help you create, organize, and track your tasks.</p>
                                <p class="mb-0 mt-2"><em>Try: "Create a task to review project proposal" or "Show me all my high priority tasks"</em></p>
                            </div>
                        </div>
                    </div>

                    <div class="input-group">
                        <input type="text" 
                               id="messageInput" 
                               class="form-control" 
                               placeholder="What would you like to do with your tasks?"
                               autocomplete="off">
                        <button class="btn btn-primary" type="button" id="sendButton">
                            <span id="sendIcon">Send</span>
                            <span id="loadingIcon" class="d-none">
                                <span class="spinner-border spinner-border-sm me-1"></span>
                                Sending...
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/api-client.js" asp-append-version="true"></script>
    <script src="~/js/error-handler.js" asp-append-version="true"></script>
    <script src="~/js/message-renderer.js" asp-append-version="true"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
}
